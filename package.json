  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "range-at-index-typescript",
  "author": {
    "name": "MahdiTa97",
    "email": "taala.mahdy@gmail.com",
    "url": "https://github.com/MahdiTa97"
  },
  "module": "dist/range-at-index-typescript.esm.js",
  "size-limit": [
    {
      "path": "dist/range-at-index-typescript.cjs.production.min.js",
